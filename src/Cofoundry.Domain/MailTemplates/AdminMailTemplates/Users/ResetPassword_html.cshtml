@model ResetPasswordTemplate
@inject ICofoundryMailTemplateHelper Cofoundry
@inject Microsoft.Extensions.Configuration.IConfiguration configuration

@{
    Layout = TemplatePath.DefaultLayoutPath_Html;
}

<h2>Hi @Model.FirstName</h2>

<p>
    We have received a request to reset the password for your account on
    the @Model.ApplicationName site. To do this click the following link:
</p>

<p>
    <a href="@Cofoundry.Routing.ToAbsolute(UrlLibrary.PasswordReset(Model, configuration))">Reset Password</a>
</p>

<p>
    This message was automatically generated by the @Model.ApplicationName site.
</p>