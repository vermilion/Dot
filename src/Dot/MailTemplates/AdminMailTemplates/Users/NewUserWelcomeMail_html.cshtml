@model NewUserWelcomeMailTemplate
@inject ICofoundryMailTemplateHelper Cofoundry
@inject Microsoft.Extensions.Configuration.IConfiguration configuration
@{
    Layout = TemplatePath.DefaultLayoutPath_Html;
}
<h2>Hi @Model.FirstName</h2>

<p>
    An account has been created for you on the @Model.ApplicationName content 
    management system. Please use your e-mail as your login.
</p>
<p>
    Your temporary password is: @Model.TemporaryPassword
</p>
<p>
    Login <a href="@Cofoundry.Routing.ToAbsolute(UrlLibrary.LoginUrl(configuration))">here</a>
</p>

<p>
    This message was automatically generated by the @Model.ApplicationName site.
</p>